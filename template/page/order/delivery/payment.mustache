                {{#isActive}} checked{{/isActive}}
                    data-value="{{&dataValue}}"
                    data-type="payment"
                    value="{{id}}"
                    />
            <label class="custom-label" for="order-{{order.id}}-delivery-payment-method-{{id}}">
                <span>Банковская карта</span>
                <img class="checkout-payment__icon" src="/css/modules/checkout-payment/img/i-bank-cart.png" alt="i-bank-cart">
            </label>
        </li>

        <li class="checkout-checkbox-lst__i checkout-payment__item">

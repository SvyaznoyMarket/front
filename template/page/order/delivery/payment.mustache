{{! Оплата }}
<div class="checkout-checkbox">
    <ul class="checkout-checkbox-lst">
    {{#paymentMethods}}
        <li class="checkout-checkbox-lst__i">
            <input
                type="radio"
                id="order-{{order.id}}-delivery-payment-method-{{id}}"
                name="order-{{order.id}}-delivery-payment-method"
                class="js-order-delivery-form-control{{#isOnline}} js-order-delivery-onlinePayment-link{{/isOnline}} custom-input custom-input--defradio"
                {{#isActive}} checked{{/isActive}}
                data-value="{{&dataValue}}"
                {{#isOnline}}
                    data-modal-position="fixed-untill-640"
                    data-modal-title="Оплатить онлайн"
                    data-storage-selector="#order-{{order.id}}-onlinePayment-data"
                {{/isOnline}}
            />
            <label class="custom-label" for="order-{{order.id}}-delivery-payment-method-{{id}}">
                <span class="custom-label_tx">{{name}}</span>
            </label>
        </li>
    {{/paymentMethods}}
    </ul>
</div>
{{! Оплата - end }}
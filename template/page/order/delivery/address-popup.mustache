<div class="address-pick-snippet">
    <div id="order-{{order.id}}-address-map-container" data-map-data="{{&mapDataValue}}" class="order-popup-map">

    </div>
    <div class="address-pick-snippet__form">
        <form class="js-smartAddress-form" action="#">
            <div class="form-control__container">
                <div class="form-control-group">
                    <input class="form-control-group__tx textfield js-smartAddress-input" id="order-delivery-address-street" type="text" name="{{fields.street.name}}" autocomplete="off" data-kladr-type="street" />
                    <label class="form-control-group__lbl" for="order-delivery-address-street">Улица</label>
                </div>

                <div class="form-control-group half-wide">
                    <input class="form-control-group__tx textfield js-smartAddress-input" id="order-delivery-address-building" type="text" name="{{fields.building.name}}" autocomplete="off" data-kladr-type="building" />
                    <label class="form-control-group__lbl" for="order-delivery-address-building">Дом</label>
                </div>

                <div class="form-control-group half-wide">
                    <input class="form-control-group__tx textfield" id="order-delivery-address-apartment" type="text" name="{{fields.apartment.name}}">
                    <label class="form-control-group__lbl" for="order-delivery-address-apartment">Квартира</label>
                </div>

                <div class="btn-container">
                    <button class="btn btn--submit btn--orange btn--medium" type="submit">Готово</button>
                </div>
            </div>
        </form>
    </div>
</div>


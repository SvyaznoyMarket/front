<div class="content">
    <div class="contentBox960">

        <h1 class="pageTitle">{{title}}</h1>

        {{#authForm}}
		<form action="{{url}}" method="post" class="formReg">
			<fieldset class="formReg_field">
				<legend class="js-authTab formReg_title legend" data-content-selector="#id-authContent" data-url-hash="auth">Мои логин и пароль</legend>

				<div id="id-authContent" class="formReg_fields"{{#isHidden}} style="display: none;"{{/isHidden}}>
					<label for="" class="formReg_fieldname labeltext">E-mail или мобильный телефон:</label>
					<input type="text" name="username" class="formReg_textfield textfield{{#errors.username}} fieldError{{/errors.username}}" value="{{username}}" />
					{{#errors.username}}<span class="errorText">{{errors.username}}</span>{{/errors.username}}

					<label for="" class="formReg_fieldname labeltext fl-l">Пароль:</label>
					<a class="fl-r orangeText borderBs" href="">Забыли пароль?</a>
					<input type="password" name="password" class="formReg_textfield textfield{{#errors.password}} fieldError{{/errors.password}}" />
                    {{#errors.password}}<span class="errorText">{{errors.password}}</span>{{/errors.password}}

                    <input type="hidden" name="redirect_to" value="{{redirectUrl}}" />

					<input type="submit" class="formReg_btn btnsubmit" value="Войти" />
				</div>
			</fieldset>
        </form>
        {{/authForm}}

        {{#registerForm}}
        <form action="{{url}}" method="post" class="formReg">
			<fieldset class="formReg_field">
				<legend class="js-authTab formReg_title legend borderBd" data-content-selector="#id-registerContent" data-url-hash="register">Я новый пользователь</legend>

				<div id="id-registerContent" class="formReg_fields"{{#isHidden}} style="display: none;"{{/isHidden}}>
					<label for="" class="formReg_fieldname labeltext">Ваше имя:</label>
					<input type="text" name="name" class="formReg_textfield textfield{{#errors.name}} fieldError{{/errors.name}}" value="{{name}}" />
                    {{#errors.name}}<span class="errorText">{{errors.name}}</span>{{/errors.name}}

					<div id="id-authLoginContent-email" class="js-authLoginContent clearfix">
	                    <label for="" class="formReg_fieldname labeltext fl-l">Ваш e-mail:</label>
	                    <span class="js-authLoginLink fl-r lightGreyText borderBd" data-content-selector="#id-authLoginContent-phone">У меня нет e-mail</span>
	                    <input type="text" name="email" class="formReg_textfield textfield{{#errors.email}} fieldError{{/errors.email}}" value="{{email}}" />
                        {{#errors.email}}<span class="errorText">{{errors.email}}</span>{{/errors.email}}
                    </div>

                    <div id="id-authLoginContent-phone" class="js-authLoginContent clearfix" style="display: none;">
	                    <label for="" class="formReg_fieldname labeltext fl-l">Ваш мобильный телефон:</label>
	                    <span class="js-authLoginLink fl-r lightGreyText borderBd" data-content-selector="#id-authLoginContent-email">Ввести e-mail</span>
	                    <input type="text" name="phone" class="formReg_textfield textfield{{#errors.phone}} fieldError{{/errors.phone}}" value="{{phone}}" />
                        {{#errors.phone}}<span class="errorText">{{errors.phone}}</span>{{/errors.phone}}
	                </div>

					<div class="formReg_subscribe fl-l">
						<input class="customInput customInput-bigCheck" type="checkbox" name="subscribe" id="subscribe" checked />
						<label class="customLabel" for="subscribe">Хочу знать об интересных предложениях</label>
					</div>

                    <input type="hidden" name="redirect_to" value="{{redirectUrl}}" />

					<input type="submit" class="formReg_btn btnsubmit mb20" value="Регистрация" />

					<p class="clear">Нажимая кнопку «Регистрация», я подтверждаю свое согласие с <a class="borderBs" href="/terms">Условиями продажи...</a></p>
				</div>
			</fieldset>
		</form>
        {{/registerForm}}

    </div>
</div>


<div class="content private">
    <section class="main-section">
        {{>partial/user/menu}}
        <a class="btn btn-exit" href="/logout">Выход</a>
    </section>
    <section class="ep">
        <ul class="private-list">
            {{#coupons}}
                <li class="private-list__item">
                    <a class="ep-list-i__lnk" href="/private/enterprize/coupon/{{id}}">
                        <div class="private-list__item-block private-list__item-block_ep">
                            <img class="ep__fishka" src="{{backgroundUrl}}">
                            <span class="ep__lbl"><img src="{{imageUrl}}"></span>
                        </div>

                        <div class="private-list__item-block">
                            <span class="ep__tl"><span>{{discountAmount}} <span class="rubl">{{discountUnit}}</span></span> на {{category}}</span>
                            <span class="ep__desc">Минимальная сумма заказа <nobr>{{minOrderSum}} <span class="rubl">p</span></nobr></span>
                        </div>
                    </a>
                </li>
            {{/coupons}}
            {{^coupons}}
                <p>Нет доступных купонов</p>
            {{/coupons}}
        </ul>
    </section>
</div>
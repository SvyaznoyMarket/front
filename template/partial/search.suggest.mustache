<div class="search-suggest js-search-suggest"></div>

{{={{{ }}}=}}
    <script id="tpl-search-suggest" type="text/html">
        {{#suggestData}}
            {{#categories}}
                {{#hasCategories}}
                    <div class="search-suggest__title">Категории</div>
                    <ul class="search-suggest-list">
                        {{#category}}
                        <li class="search-suggest-list__item">
                            <a class="search-suggest-list__link" href="{{link}}">
                                <div class="search-suggest-list__img-wrap">
                                    <img class="search-suggest-list__img" src="{{image}}">
                                </div>
                                <div class="search-suggest-list__name">{{name}}</div>
                            </a>
                        </li>
                        {{/category}}
                    </ul>
                {{/hasCategories}}
            {{/categories}}

            {{#products}}
                {{#hasProducts}}
                    <div class="search-suggest__title">Товары</div>
                    <ul class="search-suggest-list">
                        {{#product}}
                        <li class="search-suggest-list__item">
                            <a class="search-suggest-list__link" href="{{link}}">
                                <div class="search-suggest-list__img-wrap">
                                    <img class="search-suggest-list__img" src="{{image}}">
                                </div>
                                <div class="search-suggest-list__name">{{name}}</div>
                            </a>
                        </li>
                        {{/product}}
                    </ul>
                {{/hasProducts}}
            {{/products}}
        {{/suggestData}}
    </script>
{{{={{ }}=}}}
<div class="js-widget {{widgetId}}" data-template-selector="#tpl-product-slider">
    <div class="js-productSlider {{#hasCategories}}sliderCat{{/hasCategories}} clearfix" data-url="{{&dataUrl}}" data-name="{{&dataName}}" data-ga="{{&dataGa}}">

        {{#hasCategories}}
        <div class="sliderCatWrap">
            <ul class="sliderCatList">
            {{#categories}}
                <li class="sliderCatList_item" data-id="{{id}}">{{name}}</li>
            {{/categories}}
            </ul>
        </div>
        {{/hasCategories}}

        <div class="sliderBox js-productSliderList">
            {{#productCards}}
                <div class="sliderBoxItems_item" data-category="{{categoryId}}">
                    <a class="js-ga-click productDesc" href="{{url}}" data-ga-click="{{&dataGa}}">
                        <span class="sliderBoxItems_item_img">
                            <img class="productDesc_img" src="{{image}}" />
                        </span>
                        <span class="productDesc_name">{{&name}} </span>
                    </a>
                    <div class="productPrice">{{shownPrice}} <span class="rubl">p</span></div>

                    {{#cartButton}}
                        {{>partial/cart/button}}
                    {{/cartButton}}
                </div>
            {{/productCards}}
        </div>
    </div>
</div>
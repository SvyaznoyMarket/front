<header class="header clearfix js-header{{#breadcrumbBlock}} breadcrumbs{{/breadcrumbBlock}}">
    <a class="header-nav-link js-ga-click navIco" href="" data-ga-click="{&quot;m_sidebar&quot;:[&quot;send&quot;,&quot;event&quot;,&quot;m_sidebar&quot;,&quot;click&quot;]}"><i class="i-header i-header--menu"></i></a>

    {{#userBlock}}
        {{>partial/user}}
    {{/userBlock}}

    <div class="header-center">
        <div class="header__logotype"><a href="/" class="header__logotype-link"></a></div>

        {{#breadcrumbBlock}}
            <div class="bread-crumbs">
            {{#breadcrumbs}}
                <a class="bread-crumbs__link" href="{{url}}">{{name}}</a>
            {{/breadcrumbs}}
            </div>
        {{/breadcrumbBlock}}

        <form action="/search" class="search-form js-search-form" data-input-selector="#js-search-input">
            <div class="search-form-inn">
                <i class="i-search i-search--search-selected"></i>
                <input class="search-form__it js-search-form-input" id="js-search-input" type="text" placeholder="Поиск" autocomplete="off" name="q" />
                <a class="search-form__clear js-search-input-clear" href=""><i class="i-search i-search--search-clear"></i></a>
            </div>
        </form>
    </div>
</header>

<nav id="nav" class="nav">
    <div class="nav-header">
        <div class="nav-header__col nav-header__icon"><i class="i-header i-header--menu"></i></div>

        <a class="header__logotype-link" href="/"></a>

        <div class="nav-header__col nav-header__wrap">
            <span class="nav-header__wrap-text jsSelectCity"><span class="text">{{regionBlock.regionName}}</span></span>

            <div class="transBg"></div>
        </div>
    </div>

    {{#mainMenu}}
        {{>partial/main-menu/level-1}}
    {{/mainMenu}}
</nav>

<div class="fader"></div>

{{>partial/search.suggest}}
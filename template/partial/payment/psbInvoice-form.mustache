{{#form}}
<form class="form jsPaymentForms jsPaymentFormPSBInvoice" method="post" action="{{url}}">
    <input type="hidden" name="ContractorID" value="{{contractorId}}" />
    <input type="hidden" name="InvoiceID" value="{{invoiceId}}" />
    <input type="hidden" name="Sum" value="{{sum}}" />
    <input type="hidden" name="PayDescription" value="{{payDescription}}" />
    <input type="hidden" name="AdditionalInfo" value="{{additionalInfo}}" />
    <input type="hidden" name="Signature" value="{{signature}}" />

    <input id="pay-button" type="submit" class="button bigbutton" value="Оплатить заказ" />
</form>
{{/form}}
<div class="js-widget js-buySpinner {{widgetId}}" data-template-selector="#tpl-product-buySpinner"{{#timer}} data-timer="{{timer}}"{{/timer}}>
    <div class="{{class}} counter{{#isDisabled}} mDisabled{{/isDisabled}}">
        <button
            {{#isDisabled}}disabled="disabled"{{/isDisabled}}
            class="js-buySpinner-dec counter__btn counter__btn-plus"
            data-widget-selector=".{{widgetId}}"
            data-button-selector=".{{buttonId}}"
            data-value-selector=".{{widgetId}} .js-buySpinner-value"
        >–</button>
        <input class="js-buySpinner-value counter__input"
           {{#isDisabled}}disabled="disabled"{{/isDisabled}}
           type="text"
           value="{{value}}"
           data-widget-selector=".{{widgetId}}"
           data-button-selector=".{{buttonId}}"
           data-value="{{&dataValue}}"
        />
        <button class="js-buySpinner-inc counter__btn counter__btn-minus"
            {{#isDisabled}}disabled="disabled"{{/isDisabled}}
            data-widget-selector=".{{widgetId}}"
            data-button-selector=".{{buttonId}}"
            data-value-selector=".{{widgetId}} .js-buySpinner-value"
        >+</button>
        <span class="counter__num">шт.</span>

        {{#buttonDataValue}}
            <input
                type="hidden"
                class="js-buySpinner-value {{buttonId}}"
                data-value="{{&buttonDataValue}}"
                data-widget-selector=".{{widgetId}}"
                data-url="{{&dataUrl}}"
                data-auto-update="{{#buttonDataValue}}on{{/buttonDataValue}}"
            />
        {{/buttonDataValue}}
    </div>
</div>
<div class="js-widget js-cart-total {{widgetId}}" data-template-selector="#tpl-cart-total">
    <!-- итоговая стоимость заказа/купить в кредит -->
    <div class="cartLine clearfix">
        <div class="cartLine_left cartLine_left-double clearfix">
            Итого {{shownQuantity}} на сумму: <span class="price">{{shownSum}} <span class="rubl">p</span></span>
        </div><!--/ дубль для мобилки -->

        {{#credit}}
        <div class="js-creditPayment" data-template-selector="#tpl-creditPayment" data-value="{{&dataValue}}" data-price-selector=".{{widgetId}}">
            <div class="cartLine_right"{{#credit.isHidden}} style="display: none;"{{/credit.isHidden}}>
                <input class="js-creditButton custom-input custom-input--check jsCustomRadio" type="checkbox" id="id-credit-input" name="" />

                <label class="{{widgetId}} custom-label" for="id-credit-input"{{#isHidden}} style="display: none;"{{/isHidden}}>
                    <strong class="creditText">Купить в кредит</strong>
                    <strong class="creditSum">&nbsp;</strong>
                </label>
            </div>
        </div>
        {{/credit}}

        <div class="cartLine_left clearfix">
            Итого {{shownQuantity}} на сумму: <span class="price">{{shownSum}} <span class="rubl">p</span></span>
        </div>
    </div>
    <!--/ итоговая стоимость заказа/купить в кредит -->

    {{#orderRemainSum}}
        <div class="cart__min-sum">До оформления заказа осталось {{orderRemainSum}} <span class="rubl">p</span></div>
    {{/orderRemainSum}}
    {{^orderRemainSum}}
    <!-- оформить заказ -->
    <div class="cartBuy">
        <a class="js-ga-click btn--orange btn--big btn--tall" href="{{orderUrl}}" data-ga-click="{{&orderDataGa}}">Оформление заказа</a>
    </div>
    <!--/ оформить заказ -->
    {{/orderRemainSum}}
</div>

<script id="tpl-creditPayment" type="text/html">
    {{={{{ }}}=}}
    <strong class="creditText">Купить в кредит</strong>
    <span class="creditSum">от <span class="price">{{shownPrice}} <span class="rubl">p</span></span> в месяц</span>
    {{{={{ }}=}}}
</script>
<div class="js-widget {{widgetId}} cartBar" data-template-selector="#tpl-cart-bar">
    {{#orderRemainSum}}
        <div class="cart__min-sum">До оформления заказа осталось {{orderRemainSum}} <span class="rubl">p</span></div>
    {{/orderRemainSum}}

    {{^orderRemainSum}}

        <div class="cartBar__text">
            <span>
                Итого:
            </span>
            <span class="price">{{shownSum}} <span class="rubl">p</span></span>
        </div>

        <a class="js-ga-click cartBar__btn" href="{{orderUrl}}" data-ga-click="{{&orderDataGa}}">Оформить</a>
    {{/orderRemainSum}}
</div>
